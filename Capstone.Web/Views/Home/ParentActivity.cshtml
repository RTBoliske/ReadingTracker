@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Parent Activity View</h1>

<div class="form-row">
    <div class="dropdown form-group col-md-2">
        <label for="SelectBook">Books</label>
        <select class="form-control form-control-sm" id="SelectBook" required>
            <option>Select a book</option>
            <option>Book 1</option>
            <option>Book 2</option>
            <option>Book 3</option>
        </select>
    </div>
    <div class="dropdown form-group col-md-2">
        <label for="BookFormat">Format</label>
        <select class="form-control form-control-sm" id="BookFormat" required>
            <option>Reading Format</option>
            <option>Paper</option>
            <option>Digital</option>
            <option>Audiobook</option>
        </select>
    </div>
    <div class="form-group col-md-2">
        <label for="TimeReading">Time spent reading</label>
        <input type="text" class="form-control form-control-sm" />
        @*<div class="input-group-append">
            <span class="input-group-text"> minutes</span>
        </div>*@
    </div>
    <div class="form-group col-md-2">
        <label for="TotalReadingTime">Total time reading</label>
        <input type="text" class="form-control form-control-sm" readonly />
    </div>
</div>
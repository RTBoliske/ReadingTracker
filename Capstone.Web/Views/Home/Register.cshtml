@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RegisterViewModel

<div id="register_title" class="col-md-12">
    <h1>Create your Family Reading Account</h1>
    <br />
</div>
<div id="register_text" class="col-sm-6">
    
    <p>To start, create a family account with a Family Name.</p>
    <p>The Family Name may be your family's name or something fun!</p>
    <br />
</div>

<div id="register_family" class="col-sm-3">
    @using (Html.BeginForm("Register", "Home", FormMethod.Post))
    {
        @Html.ValidationMessage("invalid-credentials")


        @Html.TextBoxFor(m => m.FirstName, new { placeholder = "First Name" });
        @Html.ValidationMessageFor(m => m.FirstName);

        @Html.TextBoxFor(m => m.LastName, new { placeholder = "Last Name" });
        @Html.ValidationMessageFor(m => m.LastName);

        @Html.TextBoxFor(m => m.Username, new { placeholder = "User Name" });
        @Html.ValidationMessageFor(m => m.Username);

        @Html.TextBoxFor(m => m.FamilyName, new { placeholder = "Family Name" });
        @Html.ValidationMessageFor(m => m.FamilyName);

        @Html.TextBoxFor(m => m.Password, new { placeholder = "Password" });
        @Html.ValidationMessageFor(m => m.Password);

        @Html.TextBoxFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password" });
        @Html.ValidationMessageFor(m => m.ConfirmPassword);

        <button type="submit" class="btn btn-default">Submit</button>
    }
</div>

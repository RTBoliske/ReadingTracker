@{
    Layout = "~/Views/Shared/_LayoutTheme.cshtml";
    
}
@model RegisterViewModel

<section class="mainContent full-width clearfix">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-2 col-sm-6 col-xs-12">
                <div class="panel panel-default formPanel">
                    <div class="panel-heading bg-color-1 border-color-1">
                        <h3 class="panel-title">Create  an account</h3>
                    </div>
                    <div class="panel-body border-color-1">
                        <form action="/Home/Register" method="post" role="form">
                            <div class="form-group formField">
                                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-sm form-control-md border-color-1", placeholder = "First name" })
                                @Html.ValidationMessageFor(m => m.FirstName)
                            </div>
                            <div class="form-group formField">
                                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-sm form-control-md border-color-1", placeholder = "Last name" })
                                @Html.ValidationMessageFor(m => m.LastName)
                            </div>
                            <div class="form-group formField">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-sm form-control-md border-color-1", placeholder = "Username" })
                                @Html.ValidationMessageFor(m => m.Username)
                            </div>
                            <div class="form-group formField">
                                @Html.TextBoxFor(m => m.FamilyName, new { @class = "form-control form-control-sm form-control-md border-color-1", placeholder = "Family name" })
                                @Html.ValidationMessageFor(m => m.FamilyName)
                            </div>
                            <div class="form-group formField">
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-sm form-control-md border-color-1", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                            <div class="form-group formField">
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control form-control-sm form-control-md border-color-1", placeholder = "Re-password" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                            <div class="form-group formField">
                                <input type="submit" class="btn btn-primary btn-block bg-color-4 border-color-4" value="Register">
                            </div>
                            @*<div class="form-group formField">
                                <p class="help-block">Already have an account? <a href="/Home/Login">Log in</a></p>
                            </div>*@
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <div class="panel panel-default formPanel">
                    <div class="panel-heading bg-color-1 border-color-1">
                        <h3 class="panel-title">Already Registered?</h3>
                    </div>
                    <div class="panel-body border-color-1">
                        <form action="/Home/Login" method="post" role="form">
                            <div class="form-group formField">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-sm form-control-md border-color-1", placeholder = "Username" })
                                @Html.ValidationMessageFor(m => m.Username)
                            </div>
                            <div class="form-group formField">
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-sm form-control-md border-color-1", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                            <div class="form-group formField">
                                <input type="submit" class="btn btn-primary btn-block bg-color-4 border-color-4" value="Log in">
                            </div>
                            @*<div class="form-group formField">
                                <p class="help-block"><a href="#">Forgot password?</a></p>
                            </div>*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model RegisterViewModel

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-md-8 col-sm-8">
            <div class="card">
                <h5 class="card-header id="register_header"">Register</h5>
                
                    <div id="register_family">
                        <form class="form-inline" action="/Home/Register" method="post">
                            <div class="card-body">
                                <div class="card-text">
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-control-sm form-control-md", placeholder = "First name" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-control-sm form-control-md", placeholder = "Last name" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-sm form-control-md", placeholder = "User name" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.FamilyName, new { @class = "form-control form-control-sm form-control-md", placeholder = "Family name" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control form-control-sm form-control-md", placeholder = "Password" })
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control form-control-sm form-control-md", placeholder = "Confirm password" })
                                    </div>
                                    <div class="form-group">
                                        <button class="btn btn-sm btn-primary">Submit</button>
                                    </div>
                                </div>
                            </div>

                            <div class="card-footer">
                                <p>Have an account?<br />
                                   Log in <a href='@Url.Action("Index", "Home")' class="card-link">here</a>.
                                </p>
                            </div>
                        </form>
                      </div>
             </div>
        </div>
    </div>
</div>





@{
    ViewBag.Title = "AddFamilyMember";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model User


<h2>Add Family Members</h2>

@using (Html.BeginForm("AddFamilyMember", "Home", FormMethod.Post))
{

    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="UserRole">User's Role</label>
            <select class="form-control form-control-sm" id="UserRole">
                <option>Select a Role</option>
                <option>Administrator</option>
                <option>Parent</option>
                <option>Child</option>
            </select>
            @Html.ValidationMessageFor(m => m.RoleID)
        </div>
        <div class="form-group col-md-2">
            <label for="FirstName">First Name</label>
            <input type="text" class="form-control form-control-sm" id="FirstName">
        </div>
        <div class="form-group col-md-2">
            <label for="LastName">Last Name</label>
            <input type="text" class="form-control form-control-sm" id="LastName">
        </div>
        <div class="form-group col-md-2">
            <label for="UserName">User Name</label>
            <input type="text" class="form-control form-control-sm" id="UserName">
        </div>
        <div class="form-group col-md-2">
            <label for="Password">Password</label>
            <input type="password" class="form-control form-control-sm" id="Password">
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group col-md-2">
            <label for="ConfirmPassword">Confirm Password</label>
            <input type="password" class="form-control form-control-sm" id="ConfirmPassword">
        </div>
    </div>

    <button type="submit" class="btn btn-sm btn-primary">Submit</button>

}


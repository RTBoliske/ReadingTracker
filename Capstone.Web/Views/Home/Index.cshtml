@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Html.EnableClientValidation(false);
}
@model LoginViewModel



<div class="container -fluid" id="login">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4" id="logo_image">
            <img src="~/Content/Images/family_illustration01.jpg" style=" width: 100%;" alt="Family Reading Tracker logo" />
        </div>

        <div class="col-lg-8 col-md-8 col-sm-8">
            <div class="card w-sm-50">
                <h5 class="card-header" id="login_header">Login</h5>

                @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                {
                    @Html.ValidationMessage("invalid-credentials");

                    <div class="card-body">
                        <div class="card-text">
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Username, new { @class = "form-control form-control-sm form-control-md", placeholder = "Username" })
                                @Html.ValidationMessageFor(m => m.Username)
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-sm form-control-md", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary">Login</button>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer" id="login_footer">
                        <p>Don't have an account?<br />
                        Create one <a href='@Url.Action("Register", "Home")' class="card-link">here</a>.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>















